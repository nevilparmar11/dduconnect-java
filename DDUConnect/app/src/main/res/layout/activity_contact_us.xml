<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/rectange1"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"

                android:textColorHint="#424242"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/rectange1"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColorHint="#424242"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_name" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="141dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="142dp"
                android:text="Get in touch"
                android:textColor="#212121"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/contact_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="161dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="162dp"
                android:background="@drawable/rectangle_bg"
                android:text="Send"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_message" />

            <EditText
                android:id="@+id/contact_message"
                android:layout_width="361dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/rectange1"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Message"
                android:inputType="textMultiLine"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textColorHint="#424242"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_send">

                <Button
                    android:id="@+id/btn_fb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/facebook" />

                <Button
                    android:id="@+id/btn_insta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/instagram" />

                <Button
                    android:id="@+id/btn_linked"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/linkedin" />


                <Button
                    android:id="@+id/twitter_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/ic_twitter" />

                <Button
                    android:id="@+id/btn_youtube"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/youtube" />


            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageup"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="-0.6dp"
            android:foreground="@drawable/path_33"
            app:srcCompat="@drawable/transperentback" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>